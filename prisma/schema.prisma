generator client {
  provider = "prisma-client-js"
}

// outputs error
// generator typegraphql {
//   provider = "typegraphql-prisma"
// }

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id String @id @default(cuid())
  // maybe store hashed password/ email in profile but not sure what's easier.
  email String @unique
  password String
  profile Profile?
  workouts Workout[]
  savedExersizes Exersize[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Profile {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  name String
  birtdate DateTime
  weight Float
  height Float
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Workout {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  exersizes Exersize[] 
  date DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Exersize {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  workout Workout[]
  name String
  sets Set[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Set {
  id String @id @default(cuid())
  exersize Exersize @relation(fields: [exersizeId], references: [id])
  exersizeId String
  reps Int 
  weight Float 
}